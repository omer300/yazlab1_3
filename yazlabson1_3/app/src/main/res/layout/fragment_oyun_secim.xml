<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hp"
    tools:context=".OyunSecimFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewOyuncuSayisi"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Oyuncu Sayısı:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FF6200ED"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonTekOyuncu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tek Oyunculu"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioButtonCokOyuncu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çok Oyunculu"
                android:textColor="#FFFFFF" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textViewZorluk"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Zorluk Seviyesi:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FF6200ED"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton2e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2x2"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioButton4e4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4x4"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radioButton6a6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6x6"
                android:textColor="#FFFFFF" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/buttonOyunaGirisYap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oyunu Kur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>